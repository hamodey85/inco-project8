<!DOCTYPE html>
<html lang="fr">
  <%- include('../shared/head', {css: ['login',"main","navbar"]}) %>
  <body>
    <%- include('../shared/navbar', {admin}) %>
    <form method="POST" action="/admin/signup">
      <div class="form-group">
        <label>Email</label>
        <input autoFocus type="email" name="email" />
      </div>

      <div class="form-group">
        <label>password</label>
        <input type="password" name="password" />
      </div>

      <div class="form-group">
        <label>Confirm password</label>
        <input type="password" name="cpassword" />
      </div>
      <div class="form-group">
        <label>admin</label>
        <input type="radio" name="isAdmin" value="yes" />
      </div>
      <div class="form-group">
        <label>not admin</label>
        <input type="radio" name="isAdmin" value="no" />
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary" />
      </div>
    </form>
  </body>
</html>
