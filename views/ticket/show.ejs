<!DOCTYPE html>
<html lang="fr">
  <%- include('../shared/head', {css: ['details', 'navbar']}) %>
  <body>
    <%- include('../shared/navbar', {admin}) %>
    <div class="details">
      <h1>Ticket Details</h1>
      <h2>Id : <%= ticket.id %></h2>
      <h2>Title : <%= ticket.title %></h2>
      <h2>Description : <%= ticket.description %></h2>
      <h2>Responsible : <%= ticket.responsible %></h2>
      <h2>Priority : <%= ticket.priority %></h2>
      <h2>creator : <%= ticket.creator.email %></h2>
      <h2>Status : <%= ticket.completed ? "RÃ©solu" : "En cours" %></h2>
      <div class="comments">
        <% if(ticket.comments.length > 0){ ticket.comments.forEach(comment => { %>
        <p>
          <span><%=comment.creator.email %> said:</span>
          <%=comment.comment %>
        </p>

        <% }); } %>
      </div>
      <form action="/ticket/comment" method="post">
        <textarea name="comment" id="comment" cols="60" rows="10"></textarea>
        <input type="hidden" name="ticketId" value="<%=ticket.id%>" />
        <input type="submit" value="add comment" />
      </form>
    </div>
  </body>
</html>
